def scan_port(target_ip, port):
    try:
        sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        sock.settimeout(1)  # Adjust timeout as needed
        result = sock.connect_ex((target_ip, port))
        if result == 0:
            print(f"Port {port} open on {target_ip}")
        sock.close()
    except socket.error as e:
        print(f"Error scanning port {port}: {e}")
    except KeyboardInterrupt:
        print("Scan interrupted by user.")
        exit()
    except Exception as e:
        print(f"An error occurred: {e}")

def scan_target(target_ip, start_port, end_port):
    print(f"Scanning target {target_ip}...")
    try:
        for port in range(start_port, end_port + 1):
            scan_port(target_ip, port)
    except KeyboardInterrupt:
        print("Scan interrupted by user.")
        exit()

if _name_ == "_main_":
    try:
        target_ip = input("Enter target IP address: ").strip()
        start_port = int(input("Enter starting port number: ").strip())
        end_port = int(input("Enter ending port number: ").strip())

        if start_port > end_port or start_port < 1 or end_port > 65535:
            print("Invalid port range. Port numbers should be between 1 and 65535.")
            exit()

        scan_target(target_ip, start_port, end_port)

    except ValueError:
        print("Invalid input. Please enter a valid IP address and port number.")
    except KeyboardInterrupt:
        print("Scan interrupted by user.")
    except Exception as e:
        print(f"An error occurred: {e}")
